{
  "info": {
    "name": "Payment API Collection",
    "_postman_id": "payment-api-collection",
    "description": "A collection of API endpoints for managing payments",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create a new payment",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"user@example.com\",\n    \"roomId\": \"60d5ecb8b392f83b3c7466a9\",\n    \"amount\": 100,\n    \"description\": \"Room payment\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/payments",
          "host": ["{{base_url}}"],
          "path": ["api", "payments"]
        }
      }
    },
    {
      "name": "Get all payments by user",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/by-user",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "by-user"]
        }
      }
    },
    {
      "name": "Get all payments with pagination and filtering",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments?page=1&limit=10&startDate=2023-01-01&endDate=2023-12-31&email=user@example.com&roomId=60d5ecb8b392f83b3c7466a9&status=completed",
          "host": ["{{base_url}}"],
          "path": ["api", "payments"],
          "query": [
            {
              "key": "page",
              "value": "1"
            },
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "startDate",
              "value": "2023-01-01"
            },
            {
              "key": "endDate",
              "value": "2023-12-31"
            },
            {
              "key": "email",
              "value": "user@example.com"
            },
            {
              "key": "roomId",
              "value": "60d5ecb8b392f83b3c7466a9"
            },
            {
              "key": "status",
              "value": "completed"
            }
          ]
        }
      }
    },
    {
      "name": "Get a specific payment",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/{{payment_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "{{payment_id}}"]
        }
      }
    },
    {
      "name": "Update a payment",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"completed\",\n    \"transaction\": {\n        \"id\": \"txn_123456\",\n        \"amount\": 100\n    }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/payments/{{payment_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "{{payment_id}}"]
        }
      }
    },
    {
      "name": "Delete a payment",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/{{payment_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "{{payment_id}}"]
        }
      }
    },
    {
      "name": "Get payment statistics",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/payments/stats",
          "host": ["{{base_url}}"],
          "path": ["api", "payments", "stats"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "auth_token",
      "value": "your_auth_token_here"
    },
    {
      "key": "payment_id",
      "value": "60d5ecb8b392f83b3c7466a9"
    }
  ]
}
